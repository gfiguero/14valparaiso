{% extends 'UnisystemAdminBundle:Admin:base.html.twig' %}

{% block title %}{{ 'photography.list.title'|trans({}, 'UnisystemAdminBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'UnisystemAdminBundle:Admin:icon.html.twig' %}{{ 'photography.list.title'|trans({}, 'UnisystemAdminBundle') }}</h1>
                {% include 'UnisystemAdminBundle:Admin:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNew">{{ icon('plus fa-fw') }}{{ 'photography.new.link'|trans({}, 'UnisystemAdminBundle') }}</button>
                        <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog modal-md" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">{{ 'photography.new.title'|trans({}, 'UnisystemAdminBundle') }}</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                {{ form_start(newForm) }}
                                                    {{ form_widget(newForm) }}
                                                    <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'photography.new.confirm'|trans({}, 'UnisystemAdminBundle') }}</button>
                                                {{ form_end(newForm) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'photography.form.title'|trans({}, 'UnisystemAdminBundle') }}</th>
                                    <th>{{ 'photography.form.photography'|trans({}, 'UnisystemAdminBundle') }}</th>
                                    <th>{{ 'photography.form.actions'|trans({}, 'UnisystemAdminBundle') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, photography in photographies %}
                                <tr>
                                    <td>{% if photography.title %}{{ photography.title }}{% endif %}</td>
                                    <td>{% if photography.photography %}<img class="media-object img-rounded" src="{{ vich_uploader_asset(photography, 'file')|imagine_filter('main_photography_small') }}" />{% endif %}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit{{ photography.id }}">{{ icon('edit fa-fw') }}{{ 'photography.edit.link'|trans({}, 'UnisystemAdminBundle') }}</button>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete{{ photography.id }}">{{ icon('times fa-fw') }}{{ 'photography.delete.link'|trans({}, 'UnisystemAdminBundle') }}</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% for key, photography in photographies %}
                    <div class="modal fade" id="modalEdit{{ photography.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog modal-md" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">{{ 'photography.edit.title'|trans({}, 'UnisystemAdminBundle') }}</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            {% set editForm = attribute(editForms, key) %}
                                            {{ form_start(editForm) }}
                                                {{ form_widget(editForm) }}
                                                <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'photography.edit.confirm'|trans({}, 'UnisystemAdminBundle') }}</button>
                                            {{ form_end(editForm) }}
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="modalDelete{{ photography.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog modal-md" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">{{ 'photography.delete.title'|trans({}, 'UnisystemAdminBundle') }}</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                    <div class="col-xs-10"><p>{{ 'photography.delete.message'|trans({}, 'UnisystemAdminBundle') }}</p></div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="modal-footer">
                                    {% set deleteForm = attribute(deleteForms, key) %}
                                    {{ form_start(deleteForm) }}
                                        {{ form_widget(deleteForm) }}
                                        <button type="submit" class="btn btn-danger pull-right">{{ icon('times fa-fw') }}{{ 'photography.delete.confirm'|trans({}, 'UnisystemAdminBundle') }}</button>
                                    {{ form_end(deleteForm) }}
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        var optionsFileinput = {
            showPreview: false,
            showRemove: false,
            showUpload: false,
            showCancel: false,
            showClose: false,
            showZoom: false,
            uploadIcon: '{{ icon('folder-open') }}&nbsp;',
            browseClass: 'btn btn-primary btn-block',
            browseLabel: 'Seleccionar Archivo'
        }
        $(".fileinput").find('input').fileinput(optionsFileinput);
    </script>
{% endblock %}