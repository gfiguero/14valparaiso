{% extends 'UnisystemAdminBundle:Admin:base.html.twig' %}

{% set translation_domain = 'UnisystemAdminBundle' %} 
{% trans_default_domain translation_domain %}

{% block title %}{{ 'notice.new.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'UnisystemAdminBundle:Admin:icon.html.twig' %}{{ 'notice.new.title'|trans }}</h1>
                {% include 'UnisystemAdminBundle:Admin:flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a type="button" class="btn btn-default" href="{{ path('notice_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'notice.index.link'|trans }}</a>
                    </div>
                    <div class="panel-body">
                        {{ form_start(newForm, {'style': 'horizontal'}) }}
                        {{ form_widget(newForm) }}
                        <div class="form-group">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary">{{ icon('check fa-fw') }}{{ 'notice.new.confirm'|trans }}</button>
                            </div>
                        </div>
                        {{ form_end(newForm) }}
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}
