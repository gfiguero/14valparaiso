{% extends ':Admin:base.html.twig' %}

{% block title %}{{ 'stage.list.title'|trans({}, 'UnisystemProcessBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include ':Admin:icon.html.twig' %}{{ 'stage.list.title'|trans({}, 'UnisystemProcessBundle') }}</h1>
                {% include ':Admin:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNew">{{ icon('plus fa-fw') }}{{ 'stage.new.link'|trans({}, 'UnisystemProcessBundle') }}</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'stage.form.photography'|trans({}, 'UnisystemProcessBundle') }}</th>
                                    <th>{{ knp_pagination_sortable(stages, 'stage.form.name'|trans({}, 'UnisystemProcessBundle'), 'name') }}{% if sort == 'name' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ 'stage.form.actions'|trans({}, 'UnisystemProcessBundle') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, stage in stages %}
                                <tr>
                                    <td>{% if stage.photography %}<img class="media-object img-rounded" src="{{ vich_uploader_asset(stage, 'file', 'Unisystem\\ProcessBundle\\Entity\\Stage')|imagine_filter('stage_photography_small') }}" alt="{{ 1 }}" />{% endif %}</td>
                                    <td>{% if stage.name %}{{ stage.name }}{% endif %}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit{{ stage.id }}">{{ icon('edit fa-fw') }}{{ 'stage.edit.link'|trans({}, 'UnisystemProcessBundle') }}</button>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete{{ stage.id }}">{{ icon('times fa-fw') }}{{ 'stage.delete.link'|trans({}, 'UnisystemProcessBundle') }}</button>
                                    </td>
                                </tr>
                                <div class="modal fade" id="modalEdit{{ stage.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">{{ 'stage.edit.title'|trans({}, 'UnisystemProcessBundle') }}</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                                    {% if stage.photography %}
                                                        <img class="img-responsive img-rounded" src="{{ vich_uploader_asset(stage, 'file')|imagine_filter('stage_photography_medium') }}" alt="{{ 1 }}" />
                                                    {% else %}
                                                        <img class="img-responsive img-rounded" src="{{ 'default'|imagine_filter('stage_photography_medium') }}" alt="{{ 1 }}" />
                                                    {% endif %}
                                                </div>
                                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                                    {% set editForm = attribute(editForms, key) %}
                                                    {{ form_start(editForm) }}
                                                        {{ form_widget(editForm) }}
                                                        <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'stage.edit.confirm'|trans({}, 'UnisystemProcessBundle') }}</button>
                                                    {{ form_end(editForm) }}
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="modalDelete{{ stage.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog modal-md" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">{{ 'stage.delete.title'|trans({}, 'UnisystemProcessBundle') }}</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                                <div class="col-xs-10"><p>{{ 'stage.delete.message'|trans({}, 'UnisystemProcessBundle') }}</p></div>
                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="modal-footer">
                                                {% set deleteForm = attribute(deleteForms, key) %}
                                                {{ form_start(deleteForm) }}
                                                    {{ form_widget(deleteForm) }}
                                                    <button type="submit" class="btn btn-danger pull-right">{{ icon('times fa-fw') }}{{ 'stage.delete.confirm'|trans({}, 'UnisystemProcessBundle') }}</button>
                                                {{ form_end(deleteForm) }}
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="text-center">
                            {{ knp_pagination_render(stages) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">{{ 'stage.new.title'|trans({}, 'UnisystemProcessBundle') }}</h4>
                            </div>
                            <div class="modal-body">
                                {{ form_start(newForm) }}
                                    {{ form_widget(newForm) }}
                                    <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'stage.new.confirm'|trans({}, 'UnisystemProcessBundle') }}</button>
                                {{ form_end(newForm) }}
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}
