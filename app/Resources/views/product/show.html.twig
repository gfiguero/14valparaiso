{% extends ':Admin:base.html.twig' %}

{% block title %}{{ 'product.show.title'|trans({}, 'UnisystemProductBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include ':Admin:icon.html.twig' %}{{ 'product.show.title'|trans({}, 'UnisystemProductBundle') }}</h1>
                {% include ':Admin:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                                        
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <a type="button" class="btn btn-default" href="{{ path('product_index') }}">{{ icon('list') }}&nbsp;{{ 'product.list.link'|trans({}, 'UnisystemProductBundle') }}</a>
                            <a type="button" class="btn btn-warning" href="{{ path('product_edit', { 'id': product.id }) }}">{{ icon('pencil') }}&nbsp;{{ 'product.edit.link'|trans({}, 'UnisystemProductBundle') }}</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-confirm">{{ icon('trash-o') }}&nbsp;{{ 'product.delete.link'|trans({}, 'UnisystemProductBundle') }}</button>
                            <div class="modal fade" id="modal-confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog modal-md" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">{{ 'product.delete.title'|trans({}, 'UnisystemProductBundle') }}</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                            <div class="col-xs-10"><p>{{ 'product.delete.message'|trans({}, 'UnisystemProductBundle') }}</p></div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="pull-right" style="height:34px;">
                                                {{ form_start(delete_form) }}
                                                    <button type="submit" class="btn btn-danger">{{ icon('trash-o') }}&nbsp;{{ 'product.delete.submit'|trans({}, 'UnisystemProductBundle') }}</button>
                                                {{ form_end(delete_form) }}</div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                                <dt>{{ 'product.name'|trans({}, 'UnisystemProductBundle') }}</dt>
                                    <dd>{% if product.name %}{{ product.name }}{% endif %}</dd>
                                <dt>{{ 'product.createdAt'|trans({}, 'UnisystemProductBundle') }}</dt>
                                    <dd>{% if product.createdAt %}{{ product.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                                <dt>{{ 'product.updatedAt'|trans({}, 'UnisystemProductBundle') }}</dt>
                                    <dd>{% if product.updatedAt %}{{ product.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
{% endblock %}

