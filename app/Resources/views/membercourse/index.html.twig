{% extends ':Admin:base.html.twig' %}

{% set translation_domain = 'UnisystemMemberBundle' %} 
{% trans_default_domain translation_domain %}

{% block title %}{{ 'membercourse.list.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include ':Admin:icon.html.twig' %}{{ 'membercourse.list.title'|trans }}</h1>
                {% include ':Admin:flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNew">{{ icon('plus fa-fw') }}{{ 'membercourse.new.link'|trans }}</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ knp_pagination_sortable(memberCourses, 'membercourse.form.name'|trans, 'name') }}{% if sort == 'name' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(memberCourses, 'membercourse.form.initials'|trans, 'initials') }}{% if sort == 'initials' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(memberCourses, 'membercourse.form.rank'|trans, 'rank') }}{% if sort == 'rank' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ 'membercourse.list.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, memberCourse in memberCourses %}
                                <tr>
                                    <td>{% if memberCourse.name %}{{ memberCourse.name }}{% endif %}</td>
                                    <td>{% if memberCourse.initials %}{{ memberCourse.initials }}{% endif %}</td>
                                    <td>{% if memberCourse.rank %}{{ memberCourse.rank }}{% endif %}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalEdit{{ memberCourse.id }}">{{ icon('edit fa-fw') }}{{ 'membercourse.edit.link'|trans }}</button>
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modalDelete{{ memberCourse.id }}">{{ icon('times fa-fw') }}{{ 'membercourse.delete.link'|trans }}</button>
                                    </td>
                                </tr>
                                <div class="modal fade" id="modalEdit{{ memberCourse.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog modal-sm" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">{{ 'membercourse.edit.title'|trans }}</h4>
                                            </div>
                                            <div class="modal-body">
                                                {% set editForm = attribute(editForms, key) %}
                                                {{ form_start(editForm) }}
                                                    {{ form_widget(editForm) }}
                                                    <button type="submit" class="btn btn-primary pull-right">{{ icon('check fa-fw') }}{{ 'membercourse.edit.confirm'|trans }}</button>
                                                {{ form_end(editForm) }}
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="modalDelete{{ memberCourse.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog modal-md" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">{{ 'membercourse.delete.title'|trans }}</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                                <div class="col-xs-10"><p>{{ 'membercourse.delete.message'|trans }}</p></div>
                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="modal-footer">
                                                {% set deleteForm = attribute(deleteForms, key) %}
                                                {{ form_start(deleteForm) }}
                                                    {{ form_widget(deleteForm) }}
                                                    <button type="submit" class="btn btn-danger pull-right">{{ icon('times fa-fw') }}{{ 'membercourse.delete.confirm'|trans }}</button>
                                                {{ form_end(deleteForm) }}
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="text-center">
                            {{ knp_pagination_render(memberCourses) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">{{ 'membercourse.new.title'|trans }}</h4>
                            </div>
                            <div class="modal-body">
                                {{ form_start(newForm) }}
                                    {{ form_widget(newForm) }}
                                    <button type="submit" class="btn btn-primary pull-right">{{ icon('check fa-fw') }}{{ 'membercourse.new.confirm'|trans }}</button>
                                {{ form_end(newForm) }}
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}
