{% extends ':Frontpage:base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheet %}
<style type="text/css">
.navbar {
    margin-bottom: 0;
}
.main-text-md
{
    position: absolute;
    top: 30%;
    width: 100%;
    color: #FFF;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
}
.main-text-md .title {
    font-size: 60px;
}
.main-text-sm
{
    position: absolute;
    top: 20%;
    width: 100%;
    color: #FFF;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
}
.main-text-sm .title {
    font-size: 50px;
}
.btn-min-block
{
    min-width: 170px;
    line-height: 26px;
}
.btn-clear
{
    color: #FFF;
    background-color: transparent;
    border-color: #FFF;
    margin-right: 15px;
}
.btn-clear:hover
{
    color: #000;
    background-color: #FFF;
}
</style>
