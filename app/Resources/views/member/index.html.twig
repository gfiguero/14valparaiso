{% extends ':Admin:base.html.twig' %}

{% block title %}{{ 'member.list.title'|trans({}, 'UnisystemMemberBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include ':Admin:icon.html.twig' %}{{ 'member.list.title'|trans({}, 'UnisystemMemberBundle') }}</h1>
                {% include ':Admin:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNew">{{ icon('plus fa-fw') }}{{ 'member.new.link'|trans({}, 'UnisystemMemberBundle') }}</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        {% for key, member in members %}
                            <div class="col-xs-12 col-sm-12 col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="media">
                                            <div class="media-left">
                                                {% if member.photography %}<img class="media-object img-rounded" src="{{ vich_uploader_asset(member, 'file', 'Unisystem\\MemberBundle\\Entity\\Member')|imagine_filter('member_photography_small') }}" />
                                                {% else %}<img class="media-object img-rounded" src="{{ 'default'|imagine_filter('member_photography_small') }}" />{% endif %}
                                            </div>
                                            <div class="media-body">
                                                <h4 class="media-heading">{% if member.name %}{{ member.name }}{% else %}&nbsp;{% endif %}</h4>
                                                <p>{% if member.role %}{{ member.role.name }}{% else %}&nbsp;{% endif %}</p>
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit{{ member.id }}">{{ icon('edit fa-fw') }}{{ 'member.edit.link'|trans({}, 'UnisystemMemberBundle') }}</button>
                                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete{{ member.id }}">{{ icon('times fa-fw') }}{{ 'member.delete.link'|trans({}, 'UnisystemMemberBundle') }}</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="modalEdit{{ member.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">{{ 'member.edit.title'|trans({}, 'UnisystemMemberBundle') }}</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                                {% if member.photography %}
                                                    <img class="img-responsive img-rounded" src="{{ vich_uploader_asset(member, 'file')|imagine_filter('member_photography_medium') }}" alt="{{ 1 }}" />
                                                {% else %}
                                                    <img class="img-responsive img-rounded" src="{{ 'default'|imagine_filter('member_photography_medium') }}" alt="{{ 1 }}" />
                                                {% endif %}
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                                {% set editForm = attribute(editForms, key) %}
                                                {{ form_start(editForm) }}
                                                    {{ form_widget(editForm) }}
                                                    <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'member.edit.confirm'|trans({}, 'UnisystemMemberBundle') }}</button>
                                                {{ form_end(editForm) }}
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="modalDelete{{ member.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog modal-md" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">{{ 'member.delete.title'|trans({}, 'UnisystemMemberBundle') }}</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                            <div class="col-xs-10"><p>{{ 'member.delete.message'|trans({}, 'UnisystemMemberBundle') }}</p></div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="modal-footer">
                                            {% set deleteForm = attribute(deleteForms, key) %}
                                            {{ form_start(deleteForm) }}
                                                {{ form_widget(deleteForm) }}
                                                <button type="submit" class="btn btn-danger pull-right">{{ icon('times fa-fw') }}{{ 'member.delete.confirm'|trans({}, 'UnisystemMemberBundle') }}</button>
                                            {{ form_end(deleteForm) }}
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                    <div class="panel-footer">
                        <div class="text-center">
                            {{ knp_pagination_render(members) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">{{ 'member.new.title'|trans({}, 'UnisystemMemberBundle') }}</h4>
                            </div>
                            <div class="modal-body">
                                {{ form_start(newForm) }}
                                    {{ form_widget(newForm) }}
                                    <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'member.new.confirm'|trans({}, 'UnisystemMemberBundle') }}</button>
                                {{ form_end(newForm) }}
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        var optionsCourses = {
            enableClickableOptGroups: true,
            enableCollapsibleOptGroups: true,
            enableFiltering: true,
            includeSelectAllOption: true,
            buttonWidth: '100%',
            allSelectedText: 'Todos los Cursos',
            nonSelectedText: 'Sin Cursos',
            nSelectedText: 'cursos seleccionados',
            delimiterText: ', ',
            selectAllText: 'Seleccionar Todos',
            filterPlaceholder: 'Buscar Curso',
            enableCaseInsensitiveFiltering: true
        };
        $('.member_courses_multiselect').multiselect(optionsCourses);
        var optionsRoles = {
            enableClickableOptGroups: true,
            enableCollapsibleOptGroups: true,
            enableFiltering: true,
            includeSelectAllOption: true,
            buttonWidth: '100%',
            allSelectedText: 'Todos los Cargos',
            nonSelectedText: 'Sin Cargo Actual',
            nSelectedText: 'cargos seleccionados',
            delimiterText: ', ',
            selectAllText: 'Seleccionar Todos',
            filterPlaceholder: 'Buscar Cargo',
            enableCaseInsensitiveFiltering: true
        };
        $('.member_role_multiselect').multiselect(optionsRoles);
        var optionsPreviousRoles = {
            enableClickableOptGroups: true,
            enableCollapsibleOptGroups: true,
            enableFiltering: true,
            includeSelectAllOption: true,
            buttonWidth: '100%',
            allSelectedText: 'Todos los Cargos',
            nonSelectedText: 'Sin Cargos Anteriores',
            nSelectedText: 'cargos seleccionados',
            delimiterText: ', ',
            selectAllText: 'Seleccionar Todos',
            filterPlaceholder: 'Buscar Cargo',
            enableCaseInsensitiveFiltering: true
        };
        $('.member_previous_roles_multiselect').multiselect(optionsPreviousRoles);
        var optionsFileinput = {
            showPreview: false,
            showRemove: false,
            showUpload: false,
            showCancel: false,
            showClose: false,
            showZoom: false,
            browseClass: 'btn btn-primary btn-block',
            browseLabel: 'Seleccionar Archivo'
        }
        $(".fileinput").find('input').fileinput(optionsFileinput);
    </script>
{% endblock %}