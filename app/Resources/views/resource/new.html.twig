{% extends ':Admin:base.html.twig' %}

{% block title %}{{ 'member.new.title'|trans({}, 'UnisystemMemberBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include ':Admin:icon.html.twig' %}{{ 'member.new.title'|trans({}, 'UnisystemMemberBundle') }}</h1>
                {% include ':Admin:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <a type="button" class="btn btn-default" href="{{ path('member_index') }}">{{ icon('list') }}&nbsp;{{ 'member.list.link'|trans({}, 'UnisystemMemberBundle') }}</a>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, { 'style': 'horizontal' }) }}
                            {{ form_widget(form) }}
                                <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                    <button type="submit" class="btn btn-primary">{{ icon('save') }}&nbsp;{{ 'member.new.submit'|trans({}, 'UnisystemMemberBundle') }}</button>
                                </div></div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        var optionsCourses = {
            enableClickableOptGroups: true,
            enableCollapsibleOptGroups: true,
            enableFiltering: true,
            includeSelectAllOption: true,
            buttonWidth: '100%',
            allSelectedText: 'Todos los Cursos',
            nonSelectedText: 'Sin Cursos',
            nSelectedText: 'cursos seleccionados',
            delimiterText: ', ',
            selectAllText: 'Seleccionar Todos',
            filterPlaceholder: 'Buscar Curso'
        };
        $('#member_courses').multiselect(optionsCourses);
        var optionsRoles = {
            enableClickableOptGroups: true,
            enableCollapsibleOptGroups: true,
            enableFiltering: true,
            includeSelectAllOption: true,
            buttonWidth: '100%',
            allSelectedText: 'Todos los Cargos',
            nonSelectedText: 'Sin Cargo Actual',
            nSelectedText: 'cargos seleccionados',
            delimiterText: ', ',
            selectAllText: 'Seleccionar Todos',
            filterPlaceholder: 'Buscar Cargo'
        };
        $('#member_role').multiselect(optionsRoles);
        var optionsPreviousRoles = {
            enableClickableOptGroups: true,
            enableCollapsibleOptGroups: true,
            enableFiltering: true,
            includeSelectAllOption: true,
            buttonWidth: '100%',
            allSelectedText: 'Todos los Cargos',
            nonSelectedText: 'Sin Cargos Anteriores',
            nSelectedText: 'cargos seleccionados',
            delimiterText: ', ',
            selectAllText: 'Seleccionar Todos',
            filterPlaceholder: 'Buscar Cargo'
        };
        $('#member_previous_roles').multiselect(optionsPreviousRoles);
    </script>
{% endblock %}
